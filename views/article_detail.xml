<odoo>
    <template id="article_detail" name="Article Page Detail">
     <html>
 <head>
  <title>
   Good News Detail
  </title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
     <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet"/>
  <style>
    body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }
    .header {
      position: sticky;
      z-index: 1000;
      top: 0;
      background-color: #e74c3c;
      color: white;
      padding: 10px 20px;
}

    .header > div:first-child {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        font-size: 24px;
        font-weight: bold;
    }

    .search-box {
        display: flex;
        align-items: center;
        border: 1px solid white;
        border-radius: 20px;
        overflow: hidden;
        background-color: transparent;
        transition: border-color 0.3s ease;
        width: 50%;
        margin: 0 auto;
    }

    .search-box input {
        border: none;
        outline: none;
        padding: 8px 15px;
        font-size: 16px;
        flex: 1;
        color: white;
        font-family: 'Roboto', sans-serif;
    }

    .search-box button {
        border: none;
        background-color: transparent;
        color: white;
        padding: 8px 12px;
        cursor: pointer;
    }
    .search-box button:hover{
          color: #f1c40f;
    }

    .actions {
        display: flex;
        gap: 10px;
    }

    .actions a {
        text-decoration: none;
        padding: 5px 10px;
        border: 1px solid white;
        border-radius: 3px;
        color: white;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .actions a.login {
        background-color: transparent;
    }

    .actions a.login:hover {
        background-color: white;
        color: #e74c3c;
    }

    .actions a.member {
        background-color: white;
        color: #e74c3c;
    }

    .actions a.member:hover {
        background-color: #e74c3c;
        color: white;
    }

    .nav {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding-top: 25px;
        padding-bottom: 5px;
        background-color: #e74c3c;
    }

    .nav a {
        text-decoration: none;
        color: white;
        font-weight: bold;
        transition: color 0.3s ease;
    }

    .nav a:hover {
        color: #f1c40f;
    }

    h3 a {
        color: black;
        text-decoration: none;
        transition: color 0.3s ease;
    }


    h3 a:hover {
        color: blue;

    }


    h3 a:active {
        color: darkblue;
    }


    .container {
        display: flex;
        padding: 64px;
        padding-bottom: 26px;

        }
        .main-content {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 30px;
    }

    .article {
        margin-bottom: 40px;
        border-bottom: 2px solid #e74c3c;
        padding-bottom: 20px;
    }

    .article img {
        display: block;
        margin: 0 auto;
        width: 70%;
        height: 500px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .article .category {
        display: inline-block;
        background-color: #e74c3c;
        color: #fff;
        font-size: 24px;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 20px;
        margin-bottom: 10px;
    }

    .article h2 {
        font-size: 48px;
        color: #333;
        margin: 15px 0;
        transition: color 0.3s ease;
    }

    .article h2 a {
        text-decoration: none;
        color: inherit;
    }

    .article h2 a:hover {
        color: #e74c3c;
    }

    .article p {
        font-size: 24px;
        color: #666;
        line-height: 1.6;
        margin: 10px 0;
    }

    .article .date {
        font-size: 14px;
        color: #999;
        font-style: italic;
        margin-top: 15px;
    }


      .container .main-content .article a {
        color: black;
        text-decoration: none;
        transition: color 0.3s ease;
      }


    .container .main-content .article a:hover {
        color: blue;
    }


    .container .main-content .article a:active {
        color: darkblue;
    }

    form {
        width: 100%;
        max-width: 600px;
        margin: 20px auto;
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    form label {
        display: block;
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 8px;
    }

    form textarea {
        width: 100%;
        height: 120px;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 15px;
    }

    form button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

    form button:hover {
        background-color: #45a049;
    }

    h1 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }



  </style>
 </head>
 <body>
  <div class="header">
          <div>
               <div class="logo">
                GOOD NEWS
               </div>
                <form action="/news/search" class="search-box" method="get">
                        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
                        <input type="text" style="color: black" name="query" placeholder="Search..." />
                        <button type="submit"><i class="fas fa-search"></i></button>
                </form>
                <t t-if="user">
                    <div class="actions">
                    <a class="login" href="#">
                     <t t-esc="user.email"/>
                    </a>
                    <a class="member" href="/logout">
                     Logout
                    </a>
               </div>
                </t>
                <t t-else="">
                    <div class="actions">
                    <a class="login" href="/login">
                     Login
                    </a>
                    <a class="member" href="/register">
                     Become a member
                    </a>
               </div>
                </t>
            </div>
          <div>
               <div class="nav">
                    <t t-foreach="categories" t-as="category">
                          <a t-att-href="'/news/category/' +  str(category.id)">
                            <t t-esc="category.cate_name"/>
                          </a>
                    </t>
               </div>
          </div>
      </div>

  <div class="container">

      <div class="main-content">
<!--        <t t-foreach="articles" t-as="article">-->
          <div class="article">
            <a t-att-href="'/news/' + str(article.id)">
                <img t-att-src="article.url_image" alt="Article Image" class="img-fluid rounded"/>
            </a>
            <div class="category">
              <t t-esc="article.id_category.cate_name"/>
            </div>
              <a t-att-href="'/news/' + str(article.id)">
                  <h2>
                        <t t-esc="article.title"/>
                 </h2>
              </a>
            <a t-att-href="'/news/' + str(article.id)">
                <p>
                        <t t-esc="article.content"/>
                </p>
            </a>
          <div>
              <p>
                       <strong>Ngày đăng: </strong> <t t-esc="article.create_date.strftime('%d/%m/%Y %H:%M')"/>
                </p>
          </div>
          </div>
<!--        </t>-->


      </div>



  </div>
        <form t-att-action="'/comment/submit/' + str(article.id)" method="post">
    <div>
        <label for="comment">Comment:</label>
        <textarea id="comment" name="comment" required="true"></textarea>
    </div>
    <button type="submit">Submit</button>
</form>
<t t-if="request.session.get('success_message')">
    <div class="alert alert-success" role="alert">
        <t t-esc="request.session.pop('success_message')"/>
    </div>
</t>



<div class="article-comments">
    <h3>Comments</h3>
    <ul>
        <t t-foreach="comments" t-as="comment">
            <t t-if="comment.state=='Chưa duyệt'">
                <t t-esc="''"/>
            </t>
            <t t-else="">
                <li>
                <strong><t t-esc="comment.user_id.userName or 'Guest'"/></strong>:
                <t t-esc="comment['content']"/>
            </li>
            </t>

        </t>
    </ul>
</div>

     <footer style="background-color: #e74c3c; color: white; padding: 20px; margin-top: 20px;">
        <div class="container" style="display: flex; justify-content: space-between; flex-wrap: wrap;">
                <!-- Logo và mô tả -->
            <div class="footer-section" style="flex: 1; margin-right: 20px; word-wrap: break-word; overflow-wrap: break-word;">
                <h3 style="color: white;">Good News</h3>
                <p>
                    Chúng tôi mang đến những tin tức tốt nhất từ khắp nơi trên toàn thế giới.
                    Hãy kết nối với chúng tôi để cập nhật thông tin nhanh nhất.
                </p>
            </div>
                <!-- Điều hướng -->
            <div class="footer-section" style="flex: 1; margin-right: 20px; margin-left:200px">
                <h3 style="color: white;">Điều hướng</h3>
                    <ul style="list-style: none; padding: 0;">
                        <li><a href="/" style="color: white; text-decoration: none;">Trang chủ</a></li>
                        <li><a href="/about" style="color: white; text-decoration: none;">Về chúng tôi</a></li>
                        <li><a href="/contact" style="color: white; text-decoration: none;">Liên hệ</a></li>
                        <li><a href="/privacy" style="color: white; text-decoration: none;">Chính sách bảo mật</a></li>
                    </ul>
            </div>
            <!-- Thông tin liên hệ -->
            <div class="footer-section" style="flex: 1;">
                <h4 style="color: white;">Liên hệ</h4>
                    <p>Email: info@goodnews.com</p>
                    <p>Hotline: +84 123 456 789</p>
                <div>
                         <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
                    <div>
                        <h3>Kết nối với chúng tôi</h3>
                        <div>
                            <a href="https://facebook.com" style="color: blue; margin-right: 10px;" target="_blank">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://twitter.com" style="color: cyan; margin-right: 10px;" target="_blank">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="https://instagram.com" style="color: magenta;" target="_blank">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
            <div style="text-align: center; margin-top: 20px; border-top: 1px solid #f39c12; padding-top: 10px;">
                <p>© 2024 Good News. Tất cả các quyền được bảo lưu.</p>
            </div>
        </footer>
 </body>
</html>

    </template>
</odoo>
